{
  "manifest_version": 3,
  "name": "Validador HW Helper",
  "description": "Extensión de apoyo para exponer características del equipo al sitio Validador.",
  "version": "1.0.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

